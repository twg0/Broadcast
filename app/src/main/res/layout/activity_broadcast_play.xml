<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    >
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:text="ㅇㅇ마을 ㅇㅇㅇ님"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_logout" />
    </RelativeLayout>
    <TextView
        android:id="@+id/now_time"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="22년 5월 3일 13:26:35"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:max="100"
        android:layout_below="@id/now_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:layout_marginLeft="330dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/player_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        >
        <Button
            android:id="@+id/play_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/play_vector"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/pause_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/pause_button"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/stop_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/stop_button"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
</RelativeLayout>