<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:layout_marginLeft="20dp"
            android:text="ㅇㅇ마을 ㅇㅇㅇ님"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <ImageButton
            android:id="@+id/person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/person_icon"
            android:layout_toRightOf="@id/toolbar_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온"
            android:textSize="100dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ㅇㅇ마을 날씨 더보기 >"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/background_gray"
            android:stateListAnimator="@null"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/play"
            android:paddingLeft="20dp"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/notice"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="190dp"
            android:text="방송 게시판\nㅇㅇ마을"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/guard_data"
            android:text="ㅇㅇㅇ님 상태 확인"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/round_rec_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableRight="@drawable/ic_asterisk"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:visibility="visible"
            />
    </LinearLayout>
</LinearLayout>