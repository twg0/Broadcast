<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:text="ㅇㅇ마을 ㅇㅇㅇ님"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_logout" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar"
        android:background="#95BCF2"
        >
        <TextView
            android:id="@+id/notice_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ㅇㅇ마을 방송 게시판"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#95BCF2"
            android:layout_centerVertical="true"
            android:src="@drawable/plus_symbol"
            android:layout_marginRight="10dp"
            app:tint="#274E13"
            />
        <!-- 방송 삭제 비활성화 -->
        <ImageButton
            android:id="@+id/trash_bucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/remove"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#95BCF2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:tint="#990000"
            android:visibility="gone"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/broad_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_title" />
</RelativeLayout>